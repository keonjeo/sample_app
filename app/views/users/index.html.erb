<% provide(:title, "All users") %>
<!-- <h1>All Users</h1> -->

<!--  How to use the original rails search box  -->
<div class="row">
  <div class="col-lg-3 col-md-3 col-sm-3">
    <h1 style='font-size: 3em; ext-align: center;'>All Users</h1>
  </div>
  <div class="col-lg-9 col-md-9 col-sm-9 search-bar">
    <%= form_tag users_path , :method => :get do %>
      <div class="input-group">
        <input type="text" class="form-control" name="email" value="<%= params[:email] %>" placeholder="寻找宝贝...">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%#= render 'components/search_bar' %>


<div class="users-list">
  <ul class="users">
    <% @users.each do |user| %>
      <%= render user %>
    <% end %>
  </ul>
  <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>

