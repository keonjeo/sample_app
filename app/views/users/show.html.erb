<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-lg-4 col-md-4 col-sm-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-lg-8 col-md-8 col-sm-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.feed_microposts.any? %>
      <h3>Microposts (<%= @user.feed_microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, renderer: BootstrapPagination::Rails %>
    <% end %>
  </div>
</div>